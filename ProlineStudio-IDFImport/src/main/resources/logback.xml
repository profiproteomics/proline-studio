<configuration>
 <contextName>Proline Studio</contextName>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <!-- encoders are assigned the type
         ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
    <encoder>
      <pattern>%-5level: [%thread] %date{dd MMM yyyy - HH:mm:ss.SSS} %logger{35} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="fr.proline.studio" level="DEBUG">    
   <appender-ref ref="STDOUT" />   
  </logger>

  <logger name="fr.proline" level="INFO">    
   <appender-ref ref="STDOUT" />   
  </logger>

  <root level="OFF">
      <appender-ref ref="STDOUT" />      
  </root>
  
</configuration>